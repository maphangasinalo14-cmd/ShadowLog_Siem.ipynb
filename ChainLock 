        "\n",
        "def write_verification_policy():\n",
        "    \"\"\"Generate Sigstore policy for Kubernetes policy controllers\"\"\"\n",
        "    content = \"\"\"# ClusterImagePolicy for Sigstore Policy Controller\n",
        "# Enforces signature verification at deployment time in Kubernetes\n",
        "apiVersion: policy.sigstore.dev/v1beta1\n",
        "kind: ClusterImagePolicy\n",
        "metadata:\n",
        "  name: chainlock-verified-images\n",
        "  annotations:\n",
        "    description: \"Enforce signature verification for all container images\"\n",
        "spec:\n",
        "  images:\n",
        "    - glob: \"ghcr.io/YOUR_USERNAME/**\"\n",
        "\n",
        "  authorities:\n",
        "    - keyless:\n",
        "        url: https://fulcio.sigstore.dev\n",
        "        identities:\n",
        "          - issuerRegExp: \".*\"\n",
        "            subjectRegExp: \"https://github.com/YOUR_USERNAME/.*\"\n",
        "        rekor:\n",
        "          url: https://rekor.sigstore.dev\n",
        "        ctlog:\n",
        "          url: https://ctfe.sigstore.dev\n",
        "\n",
        "  mode: enforce\n",
        "\n",
        "  attestations:\n",
        "    - name: sbom-attestation\n",

        "    print_status(\"âœ…\", f\"Generated: {path}\")\n",
        "\n",
        "def create_zip_file():\n",
        "    \"\"\"Create ZIP file of the project\"\"\"\n",
        "    zip_filename = f\"{PROJECT_DIR}.zip\"\n",
        "    print_status(\"ğŸ“¦\", f\"Creating ZIP file: {zip_filename}\", Colors.BLUE)\n",
        "\n",
        "    with zipfile.ZipFile(zip_filename, 'w', zipfile.ZIP_DEFLATED) as zipf:\n",
        "        for root, dirs, files in os.walk(PROJECT_DIR):\n",
        "            for file in files:\n",
        "                file_path = os.path.join(root, file)\n",
        "                arcname = os.path.relpath(file_path, os.path.dirname(PROJECT_DIR))\n",
        "                zipf.write(file_path, arcname)\n",
        "\n",
        "    file_size = os.path.getsize(zip_filename) / 1024\n",
        "    print_status(\"âœ…\", f\"ZIP created: {zip_filename} ({file_size:.1f} KB)\")\n",
        "    return zip_filename\n",
        "\n",
        "def download_file_colab(filename):\n",
        "    \"\"\"Download file in Google Colab\"\"\"\n",
        "    if IN_COLAB:\n",
        "        print_status(\"â¬‡ï¸\", \"Initiating download in Colab...\", Colors.BLUE)\n",
        "        files.download(filename)\n",
        "        print_status(\"âœ…\", f\"Download started: {filename}\")\n",
        "    else:\n",
        "        print_status(\"â„¹ï¸\", f\"File ready: {filename}\", Colors.YELLOW)\n",
        "\n",
        "def print_next_steps():\n",
        "    \"\"\"Print deployment instructions\"\"\"\n",
        "    print_header(\"ğŸ‰ CHAINLOCK GENERATED SUCCESSFULLY!\")\n",
        "\n",
        "    if IN_COLAB:\n",
        "        print(f\"{Colors.CYAN}ğŸ“¥ Google Colab Mode:{Colors.END}\\n\")\n",
        "        print(f\"  The ZIP file will download automatically.\")\n",
        "        print(f\"  If download doesn't start, look for {PROJECT_DIR}.zip in the files panel.\")\n",
        "\n",
        "    print(f\"\\n{Colors.BLUE}ğŸ“‹ Next Steps:{Colors.END}\\n\")\n",
        "    print(f\"  1. Extract {PROJECT_DIR}.zip\")\n",
        "    print(f\"  2. cd {PROJECT_DIR}\")\n",
        "    print(f\"  3. git init\")\n",
        "    print(f\"  4. git add .\")\n",
        "    print(f\"  5. git commit -m 'Initial ChainLock setup'\")\n",
        "    print(f\"  6. gh repo create your-app --public --source=. --push\")\n",
        "\n",
        "# This is the main execution block for the Colab environment.\n",
        "# The functions below will be called in order to generate the project structure,\n",
        "# fill it with content, create a zip file, and offer it for download.\n",
        "\n",
        "print_header(\"ğŸš€ CHAINLOCK: GENERATING SECURE SUPPLY CHAIN PROJECT\")\n",
        "\n",
        "setup_colab_environment()\n",
        "create_structure()\n",
        "write_secure_pipeline()\n",
        "write_verification_policy()\n",
        "write_kyverno_policy()\n",
        "write_example_dockerfile()\n",
        "write_example_app()\n",
        "write_requirements()\n",
        "write_readme()\n",

        "        f\"{PROJECT_DIR}/{POLICY_DIR}\",\n",
        "        f\"{PROJECT_DIR}/{DOCS_DIR}\",\n",
        "        f\"{PROJECT_DIR}/{EXAMPLE_DIR}\"\n",
        "    ]\n",
        "\n",
        "    for directory in dirs:\n",
        "        Path(directory).mkdir(parents=True, exist_ok=True)\n",
        "        print_status(\"ğŸ“‚\", f\"Created: {directory}\")\n",
        "\n",
        "def write_secure_pipeline():\n",
        "    \"\"\"Generate the GitHub Actions CI/CD Pipeline with full security stack\"\"\"\n",
        "    content = \"\"\"name: ChainLock Secure Build & Sign\n",
        "\n",
        "on:\n",
        "  push:\n",
        "    branches: [ \"main\", \"develop\" ]\n",
        "    tags: [ \"v*.*.*\" ]\n",
        "  pull_request:\n",
        "    branches: [ \"main\" ]\n",
        "  workflow_dispatch:\n",
        "\n",
        "env:\n",
        "  REGISTRY: ghcr.io\n",
        "  IMAGE_NAME: ${{ github.repository }}\n",
        "\n",
        "permissions:\n",
        "  contents: read\n",
        "\n",
        "jobs:\n",
        "  security-scan:\n",
        "    name: Security & Vulnerability Scanning\n",
        "    runs-on: ubuntu-latest\n",
        "    permissions:\n",
        "      contents: read\n",
        "      security-events: write\n",
        "\n",
        "    steps:\n",
        "      - name: Checkout repository\n",
        "        uses: actions/checkout@v4\n",
        "\n",
        "      - name: Run Trivy vulnerability scanner (Filesystem)\n",
        "        uses: aquasecurity/trivy-action@0.24.0\n",
        "        with:\n",
        "          scan-type: 'fs'\n",
        "          scan-ref: '.'\n",
        "          format: 'sarif'\n",
        "          output: 'trivy-fs-results.sarif'\n",
        "          severity: 'CRITICAL,HIGH'\n",
        "\n",
        "      - name: Upload Trivy results to GitHub Security\n",
        "        uses: github/codeql-action/upload-sarif@v3\n",
        "        if: always()\n",
        "        with:\n",
        "          sarif_file: 'trivy-fs-results.sarif'\n",
        "\n",
        "      - name: Run Grype vulnerability scanner\n",
        "        uses: anchore/scan-action@v3\n",
        "        id: grype-scan\n",
        "        with:\n",
        "          path: \".\"\n",
        "          fail-build: false\n",
        "\n",
        "  build-sign-attest:\n",
        "    name: Build, Sign & Attest\n",
        "    runs-on: ubuntu-latest\n",
        "    needs: security-scan\n",
        "    permissions:\n",
        "      contents: read\n",
        "      packages: write\n",
        "      id-token: write\n",
        "      attestations: write\n",
        "\n",
        "    outputs:\n",
        "      image-digest: ${{ steps.build-and-push.outputs.digest }}\n",
        "      image-tag: ${{ steps.meta.outputs.tags }}\n",
        "\n",
        "    steps:\n",
        "      - name: Checkout repository\n",
        "        uses: actions/checkout@v4\n",
        "        with:\n",
        "          fetch-depth: 0\n",
        "\n",
        "      - name: Set up Docker Buildx\n",
        "        uses: docker/setup-buildx-action@v3\n",
        "\n",
        "      - name: Install Cosign\n",
        "        uses: sigstore/cosign-installer@v3.7.0\n",
        "\n",
        "      - name: Install Syft (SBOM Generator)\n",
        "        uses: anchore/sbom-action/download-syft@v0.17.2\n",
        "\n",
        "      - name: Log into registry ${{ env.REGISTRY }}\n",
        "        uses: docker/login-action@v3\n",
        "        with:\n",
        "          registry: ${{ env.REGISTRY }}\n",
        "          username: ${{ github.actor }}\n",
        "          password: ${{ secrets.GITHUB_TOKEN }}\n",
        "\n",
        "      - name: Extract Docker metadata\n",
        "        id: meta\n",
        "        uses: docker/metadata-action@v5\n",
        "        with:\n",
        "          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}\n",
        "          tags: |\n",
        "            type=ref,event=branch\n",
        "            type=ref,event=pr\n",
        "            type=semver,pattern={{version}}\n",
        "            type=semver,pattern={{major}}.{{minor}}\n",
        "            type=semver,pattern={{major}}\n",
        "            type=sha,prefix={{branch}}-\n",
        "            type=raw,value=latest,enable={{is_default_branch}}\n",
        "\n",
        "      - name: Build and Push Docker image\n",
        "        id: build-and-push\n",
        "        uses: docker/build-push-action@v6\n",
        "        with:\n",
        "          context: .\n",
        "          platforms: linux/amd64,linux/arm64\n",
        "          push: true\n",
        "          tags: ${{ steps.meta.outputs.tags }}\n",
        "          labels: ${{ steps.meta.outputs.labels }}\n",
        "          cache-from: type=gha\n",
        "          cache-to: type=gha,mode=max\n",
        "          provenance: true\n",
        "          sbom: true\n",
        "\n",
        "      - name: ğŸ“ Generate SBOM with Syft\n",
        "        run: |\n",
        "          IMAGE_REF=\"${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}@${{ steps.build-and-push.outputs.digest }}\"\n",
        "          echo \"Generating SBOM for: $IMAGE_REF\"\n",
        "\n",
        "          syft \"$IMAGE_REF\" -o spdx-json=sbom.spdx.json\n",
        "          syft \"$IMAGE_REF\" -o cyclonedx-json=sbom.cyclonedx.json\n",
        "          syft \"$IMAGE_REF\" -o syft-json=sbom.syft.json\n",
        "\n",
        "          echo \"::notice::Generated SBOM in SPDX, CycloneDX, and Syft formats\"\n",
        "\n",
        "      - name: ğŸ” Scan Container Image with Trivy\n",
        "        uses: aquasecurity/trivy-action@0.24.0\n",
        "        with:\n",
        "          image-ref: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}@${{ steps.build-and-push.outputs.digest }}\n",
        "          format: 'json'\n",
        "          output: 'trivy-results.json'\n",
        "          severity: 'CRITICAL,HIGH,MEDIUM'\n",
        "\n",
        "      - name: ğŸ” Sign Container Image with Cosign (Keyless)\n",
        "        run: |\n",
        "          IMAGE_REF=\"${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}@${{ steps.build-and-push.outputs.digest }}\"\n",
        "          echo \"Signing image: $IMAGE_REF\"\n",
        "          cosign sign --yes \"$IMAGE_REF\"\n",
        "          echo \"::notice::Image signed with Sigstore keyless signing\"\n",
        "        env:\n",
        "          COSIGN_EXPERIMENTAL: 1\n",
        "\n",
        "      - name: ğŸ“ Attach SBOM to Image\n",
        "        run: |\n",
        "          IMAGE_REF=\"${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}@${{ steps.build-and-push.outputs.digest }}\"\n",
        "          cosign attach sbom --sbom sbom.spdx.json \"$IMAGE_REF\"\n",
        "          echo \"::notice::SBOM attached to container image\"\n",
        "\n",
        "      - name: ğŸ“‹ Attest SBOM with Cosign\n",
        "        run: |\n",
        "          IMAGE_REF=\"${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}@${{ steps.build-and-push.outputs.digest }}\"\n",
        "          cosign attest --yes --predicate sbom.spdx.json --type spdxjson \"$IMAGE_REF\"\n",
        "          echo \"::notice::SBOM attestation created\"\n",
        "        env:\n",
        "          COSIGN_EXPERIMENTAL: 1\n",
        "\n",
        "      - name: ğŸ”’ Attest Vulnerability Scan with Cosign\n",
        "        run: |\n",
        "          IMAGE_REF=\"${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}@${{ steps.build-and-push.outputs.digest }}\"\n",
        "          cosign attest --yes --predicate trivy-results.json --type vuln \"$IMAGE_REF\"\n",
        "          echo \"::notice::Vulnerability scan attestation created\"\n",
        "        env:\n",
        "          COSIGN_EXPERIMENTAL: 1\n",
        "\n",
        "      - name: ğŸ“¦ Upload Artifacts\n",
        "        uses: actions/upload-artifact@v4\n",
        "        with:\n",
        "          name: supply-chain-artifacts\n",
        "          path: |\n",
        "            sbom.*.json\n",
        "            trivy-results.json\n",
        "          retention-days: 90\n",
        "\n",
        "      - name: Generate Build Summary\n",
        "        run: |\n",
        "          cat >> $GITHUB_STEP_SUMMARY << EOF\n",
        "          ## ğŸ”’ ChainLock Build Summary\n",
        "\n",
        "          ### Container Image\n",
        "          - **Digest:** `${{ steps.build-and-push.outputs.digest }}`\n",
        "          - **Tags:**\n",
        "          $(echo \"${{ steps.meta.outputs.tags }}\" | sed 's/^/  - /')\n",
        "\n",
        "          ### Security Attestations\n",
        "          - âœ… Image signed with Sigstore (keyless)\n",
        "          - âœ… SBOM generated (SPDX, CycloneDX, Syft)\n",
        "          - âœ… SBOM attached and attested\n",
        "          - âœ… Vulnerability scan completed and attested\n",
        "          - âœ… Multi-architecture build (amd64, arm64)\n",
        "\n",
        "          ### Verification Command\n",
        "          ```bash\n",
        "          cosign verify \\\\\n",
        "            --certificate-identity-regexp \"https://github.com/${{ github.repository }}\" \\\\\n",
        "            --certificate-oidc-issuer \"https://token.actions.githubusercontent.com\" \\\\\n",
        "            ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}@${{ steps.build-and-push.outputs.digest }}\n",
        "          ```\n",
        "          EOF\n",
        "\n",
        "  verify:\n",
        "    name: Verify Signatures & Attestations\n",
        "    runs-on: ubuntu-latest\n",
        "    needs: build-sign-attest\n",
        "    permissions:\n",
        "      packages: read\n",
        "\n",
        "    steps:\n",
        "      - name: Install Cosign\n",
